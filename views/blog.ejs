<div class="add_blog col-sm-10 col-sm-offset-3 col-md-10 col-md-offset-2">
    <form role="form" action="/blog?id=<%= blog_details.id%>" method="post">
        <div class="form-group">
            <label for="name" class="col-sm-1 col-md-1">标题</label>
            <div class=" col-sm-11 col-md-11">
                <input type="text" class="form-control" style="width:1024px;" placeholder="标题" name="title" value="<%= blog_details.title %>">
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-1 col-md-1">内容</label>
            <div class="col-sm-11"><script id="editor" name="editor" type="text/plain" style="width:1024px;height:500px;" ><%- blog_details.content %></script></div>
        </div>
        <div class="form-group">
            <label for="name" class="col-sm-1 col-md-1">分类</label>
            <div class=" col-sm-11 col-md-11">
                <select class="form-control" name="classify" style="width:1024px;">
                    <option <% if(blog_details.classify=='html+css'){ %>selected="selected"<% } %>>html+css</option>
                    <option <% if(blog_details.classify=='javascript'){ %>selected="selected"<% } %>>javascript</option>
                    <option <% if(blog_details.classify=='angular'){ %>selected="selected"<% } %>>angular</option>
                    <option <% if(blog_details.classify=='ionic'){ %>selected="selected"<% } %>>ionic</option>
                    <option <% if(blog_details.classify=='ES6'){ %>selected="selected"<% } %>>ES6</option>
                </select>
            </div>
        </div>
        <div class="form-group col-md-offset-1">
            <input type="submit" value="确认" class="btn btn-primary add_blog_btn">
        </div>
    </form>
</div>
